model Game {
  id        String      @id @default(uuid())

  title     String
  bannerUrl String

  ads       Ad[] // One game can have many ads
}

model Ad {
  id          String    @id @default(uuid())
  gameId      String

  title       String
  description String
  weekDays    String
  hourStart   Int
  hourEnd     Int
  createdAt   DateTime @default(now())

  game        Game     @relation(fields: [gameId], references: [id])

  // suggesteds  SuggestedCard[]
}



