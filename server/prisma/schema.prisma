generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// This is my User model, the user who will creating the cards
model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  cards     Card[]
}


// This filds are the cards that the user will create, it is saved in the database
model Card {
  id          Int      @id @default(autoincrement())
  userId      Int

  title       String
  description String
  goodOrBad   Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?
  user        User     @relation(fields: [userId], references: [id])

  suggesteds  SuggestedCard[]
}



// This SuggestedCard model, will be suggested to the user based on the card he created
model SuggestedCard {
  id            Int      @id @default(autoincrement())
  cardId        Int

  title         String
  subtitle      String
  backgroundImg String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  deletedAt     DateTime?

  card          Card     @relation(fields: [cardId], references: [id])
}